p(dst, str)
{
	buffer[4104];

	puts(str);
	read(0, buff, 4096);
	ptr = strchr(buff, "\n");
	strncpy(dst, buffer, 20);
}

pp(char *dest)
{
	buf1[48];
	buf2[28];

	p(buf1, " - ");
	p(buf2, " - ");

	strcpy(dest, buf1);

	dest[strlen(dest) - 1] = " ";
	return strcat(dest, buf2);
}

main(int argc, char **argv)
{
	char str[22];

	pp(str);
	puts(str);
}
